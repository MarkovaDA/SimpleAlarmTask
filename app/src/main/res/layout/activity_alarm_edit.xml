<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/itemPreview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/windowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="13"
            android:textColor="@color/colorAccent"
            android:text="Редактирование будильника"
            />
    </TableRow>
    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/txtAlarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название" />
    </TableRow>
    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="Тип сигнала:" />
    </TableRow>

    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/spinnerSignalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>
    <TableRow android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="Время:"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <LinearLayout android:orientation="horizontal">

            <EditText
                android:id="@+id/txtAlarmHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00"
                android:inputType="time" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=":"
                />
            <EditText
                android:id="@+id/txtAlarmMinute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00"
                android:inputType="time" />
            <Button
                android:id="@+id/btnSetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onTimeSelectBtnClicked"
                android:text="..." />
        </LinearLayout>
    </TableRow>

    <TableRow android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="День недели:" />
    </TableRow>
    <TableRow android:layout_marginLeft="10dp">
        <LinearLayout android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chMon"
                android:tag="0"
                android:onClick="onCheckboxClicked"
                android:text="Пн" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chTue"
                android:tag="1"
                android:onClick="onCheckboxClicked"
                android:text="Вт" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chWed"
                android:tag="2"
                android:onClick="onCheckboxClicked"
                android:text="Ср" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chThu"
                android:tag="3"
                android:onClick="onCheckboxClicked"
                android:text="Чт" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chFru"
                android:tag="4"
                android:onClick="onCheckboxClicked"
                android:text="Пт" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chSat"
                android:tag="5"
                android:onClick="onCheckboxClicked"
                android:text="Сб" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chSun"
                android:tag="6"
                android:onClick="onCheckboxClicked"
                android:text="Вс" />
        </LinearLayout>
    </TableRow>

    <TableRow  android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="сохранить"
            />
    </TableRow>
</TableLayout>
